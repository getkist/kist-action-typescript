{
  "name": "@getkist/action-typescript",
  "version": "0.0.8",
  "description": "TypeScript compilation actions for kist build tool",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "keywords": [
    "kist",
    "kist-action",
    "typescript",
    "compiler",
    "tsc",
    "transpilation"
  ],
  "author": "kist",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getkist/kist-action-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/getkist/kist-action-typescript/issues"
  },
  "homepage": "https://github.com/getkist/kist-action-typescript#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns=\\.test\\.ts$",
    "test:integration": "jest --testPathPatterns=\\.integration\\.test\\.ts$",
    "test:e2e": "jest --testPathPatterns=e2e\\.test\\.ts$",
    "test:coverage:enforce": "jest --coverage && jest --listTests | grep -E '\\.(test|integration|e2e)\\.ts$' | wc -l && echo 'Coverage thresholds enforced'",
    "benchmark": "npx ts-node src/tests/benchmark.ts",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "peerDependencies": {
    "kist": "^0.1.0"
  },
  "dependencies": {
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/node": "25.2.2",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "eslint": "10.0.0",
    "jest": "30.2.0",
    "kist": "^0.1.58",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
